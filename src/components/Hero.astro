---
import Logo from "../assets/logo-white.svg";
import background from "../assets/bg-black.png";
---

<section class="hero">
	<img class="hero-bg" src={background.src} alt="" fetchpriority="high" />
	<img
		class="hero-logo"
		src={Logo.src}
		width="526"
		height="697"
		alt="The Original Malaphortune Cookies"
		loading="eager"
	/>
	<p><a href="#" class="button">Available Soon</a></p>
</section>

<style lang="scss">
	.hero {
		background: #1c1c1c;
		position: relative;
		overflow: hidden;
		min-height: 90vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		&-bg {
			position: absolute;
			inset: 0;
			object-fit: cover;
			width: 100%;
			height: 100%;
		}
		&-logo {
			position: relative;
			margin-bottom: 1.5rem;
		}
		p {
			position: relative;
		}
	}
</style>
